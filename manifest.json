{
  "manifest_version": 3,
  "name": "PTIT Schedule",
  "version": "0.0.1",
  "description": "Make PTIT lessons table more friendly.",
  "content_scripts": [
    {
      "css": ["style.css"],
      "js": ["index.js"],
      "matches": ["https://github.com/*"]
    }
  ],
  "permissions": ["storage", "contextMenus", "activeTab"],
  "host_permissions": ["https://github.com/"],
  "icons": {
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
